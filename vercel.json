{
  "version": 2,
  "buildCommand": "bash deployment.sh",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/projects", "destination": "/" },
    { "source": "/blog/:slug", "destination": "/" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ]
} 