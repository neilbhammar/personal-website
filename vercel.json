{
  "version": 2,
  "buildCommand": "bash deployment.sh",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/(.*)", 
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ]
} 